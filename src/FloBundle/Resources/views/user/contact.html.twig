{% extends 'base.html.twig' %}

{% block header %}
    {% include '@Flo/Default/navbar.html.twig' %}
{% endblock %}

{% block body %}

<body class="page">
    <div class="container">
        <h2>Contact</h2>

        <div class="row contact">

            <form class="col s12 formvalidate" id="formvalidate" action="{{ path('send_mail') }}" method="post">

                <div class="row">

                    <div class="input-field col l6 s12">
                        <i class="material-icons prefix">account_circle</i>
                        <input name="prenom" id="first_name" type="text" class="validate" required="" aria-required="true">
                        <label for="first_name">Pr√©nom</label>
                    </div>

                    <div class="input-field col l6 s12">
                        <i class="material-icons prefix iconame">account_circle</i>
                        <input name="nom" id="last_name" type="text" class="validate" required="" aria-required="true">
                        <label for="last_name">Nom</label>
                    </div>

                </div>

                <div class="row">

                    <div class="input-field col s12">
                        <i class="material-icons prefix">mail</i>
                        <input name="email" id="email" type="email" class="validate" required="" aria-required="true">
                        <label for="email" data-error="Cet email n'est pas valide">Email</label>

                    </div>

                </div>

                <div class="row">

                    <div class="input-field col s12">
                        <i class="material-icons prefix">create</i>
                        <textarea name="msg" id="textarea" class="materialize-textarea" required="" aria-required="true"></textarea>
                        <label for="textarea">Votre message</label>

                    </div>

                </div>

                <div class="row center">
                    <button class="btn waves-effect waves-light" type="submit" name="action">Envoyer
                        <i class="material-icons right">send</i>
                    </button>
                </div>

            </form>

        </div>

    </div>


{% endblock %}

{% block javascripts %}
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44=" crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.7/js/materialize.min.js"></script>
    <script src="{{ asset('bundles/flo/js/flo.js') }}"></script>
{% endblock %}