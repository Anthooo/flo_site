{% extends "base.html.twig" %}

{% block body %}

    <body class="admin">


    <h1>FLORENCE MENET-PELISSON</h1>

    <div class="row">
        <div class="text-center jumbotron">


        {% block fos_user_content %}

            {% if error %}
                <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
            {% endif %}

            <form cclass="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">
                <div class="form-group">

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                    <label class="control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control input-md" type="text" id="username" name="_username" required="required" />
                </div>

                <div class="form-group">
                    <label class="control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
                    <input class="form-control input-md" type="password" id="password" name="_password" required="required" />
                </div>

                <div class="form-group">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                </div>


                    <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-default">
                </div>
            </form>

        {% endblock fos_user_content %}
        </div>
    </div>

    </body>

{% endblock %}
