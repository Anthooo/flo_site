{% extends 'base.html.twig' %}

{% block body %}
    {% include '@Flo/Default/navadmin.html.twig' %}

    <div id="admin">

        <div class="container">
            <div class="row">
                <h1>Galerie - Ã©dition</h1>

                {{ form_start(edit_form) }}

                {{ form_label(edit_form.contenu) }}
                {{ form_widget(edit_form.contenu) }}
                {{ form_errors(edit_form.contenu) }}

                <hr>

                <div class="col-xs-12">
                    <h5>Images actuelles : </h5>

                    {% for image in galerie.image.urls %}

                        <div class="view view-first">
                            <img src="{{ asset('uploads/images/' ~ image) }}" />
                            <div class="mask">
                                <a class="info btn btn-default" href="{{ asset('uploads/images/' ~ image) }}" data-toggle="lightbox" data-gallery="example-gallery"><span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                                </a>
                                <a class="info btn btn-default" href="{{ path('delete_img_galerie', {'id': galerie.image.id, 'name': image }) }}"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                            </div>
                        </div>

                    {% endfor %}
                </div>
                <div class="col-xs-7">
                    {{ form_label(edit_form.image) }}
                    {{ form_widget(edit_form.image) }}
                    {{ form_errors(edit_form.image) }}
                </div>

                <div class="col-xs-12 boutons text-center">

                    <input class="btn btn-default" type="submit" value="Editer" />
                    <a class="btn btn-default" href="{{ path('galerie_index') }}">Retour</a>
                    <a class="btn btn-default" href="{{ path('galerie_delete', { 'id': galerie.id }) }}" title="Effacer">Effacer</a>
                </div>
                {{ form_end(edit_form) }}


            </div>
        </div>
    </div>
    {% include '@Flo/Default/footer_admin.html.twig' %}

{% endblock %}
