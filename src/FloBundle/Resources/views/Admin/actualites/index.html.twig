{% extends 'base.html.twig' %}

{% block body %}
<body class="admin">

<div class="row">
    {% include '@Flo/Default/navadmin.html.twig' %}

    <div class="col l10">
        <div class="container adm">
            <div class="row admincontenu">

                <div class="row">
                    <div class="col l12">
                        <h1>Actualites list</h1>

                        <table>
                            <thead>
                            <tr>
                                <th>Image</th>
                                <th>Titre</th>
                                <th>Contenu</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for actualite in actualites %}
                                <tr>

                                    <td><img class="materialboxed" src="{{ asset('uploads/images/') }}{{ actualite.image }}"></td>
                                    <td>{{ actualite.titre }}</td>
                                    <td wordwrap><div class="contentmodele">{{ actualite.contenu|raw }}</div></td>
                                    <td>
                                        <ul>
                                            <li>
                                                <a href="{{ path('actualites_edit', { 'id': actualite.id }) }}"><i class="material-icons">mode_edit</i></a>
                                                <a href="{{ path('actualites_delete', { 'id': actualite.id }) }}"><i class="material-icons">delete</i></a>
                                            </li>
                                        </ul>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>

                        <ul class="center">
                            <li>
                                <a href="{{ path('actualites_new') }}"><i class="medium material-icons">note_add</i></a>
                            </li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
